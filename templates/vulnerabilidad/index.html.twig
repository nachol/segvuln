{% extends 'base.html.twig' %}

{% block title %}Índice de Vulnerabilidades{% endblock %}

{% block body %}
<ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="#">Vulnerabilidades</a>
        </li>
        <li class="breadcrumb-item active">Índice de Vulnerabilidades</li>
      </ol>

<div class="row">
        <div class="col-md-12 col-md-offset-1">
            <table class="table table-hover" id="myTable">
                <thead>
                <th class="col-md-2">Plataforma</th>
                <th class="col-md-3">Fecha</th>
                <th class="col-md-3">Modificacion</th>
                <th class="col-md-3">Vulnerabilidad</th>
                <th class="col-md-3">Criticidad</th>

                {# <th class="col-md-2 text-center"> #}
                </th>
                </thead>
                <tbody>
                    {% for entidad in entidades %}
                        <tr>
                            <td>{{ entidad.escaneo.plataforma }}</td>
                            <td>{{ entidad.fechaCreacion|date('d-m-Y') }}</td>
                            <td>{{ entidad.fechaCreacion|date('d-m-Y') }}</td>
                            <td><a href="{{ path('view_tipo_vuln', {'id' : entidad.tipo.id})}}">{{ entidad.tipo.descripcion}}</a></td>
                            <td>{{ entidad.tipo.getStringCriticidad}}</td>


                            {# <td class="text-center">
                                <a type="button" class="btn btn-default" aria-label="Left Align" href="
                                   {{ path('edit_tipo_vuln', {'id':entidad.id}) }}">
                                    <span class="fa fa-pencil" aria-hidden="true" ></span>
                                </a>
                                <a class="btn btn-default" aria-label="Left Align" href="#" data-href="
                                   {{ path('delete_tipo_vuln', {'id':entidad.id}) }}" data-texto="¿Eliminar el tipo de vulnerabilidad <span class='text-danger'>{{ entidad.id|striptags }}</span>?" data-toggle="modal" data-target="#popup_confirmar">
                                    <span class="fa fa-trash" aria-hidden="true"></span>
                                </a>
                            </td> #}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <br>
        </div>
    </div>

{% endblock %}