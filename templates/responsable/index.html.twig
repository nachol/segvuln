{% extends 'base.html.twig' %}

{% block title %}Índice de Responsables{% endblock %}

{% block body %}
<ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="#">Responsables</a>
  </li>
  <li class="breadcrumb-item active">Índice de Responsables</li>
</ol>

<div class="row">
    <div class="col-md-12 col-md-offset-1">
        <table class="table table-hover" id="myTable">
            <thead>
                <th class="col-md-2">Usuario de Red</th>
                <th class="col-md-3">Nombre</th>
                <th class="col-md-3">Aplellido</th>
                <th class="col-md-2">mail</th>
                <th class="col-md-2 text-center">
                    <a type="button" class="btn btn-primary btn-sm pull-right" aria-label="Left Align" href="{{ path('new_responsable') }}">
                        <span class="fa fa-plus" aria-hidden="true"></span>
                    </a>
                </th>
            </thead>
            <tbody>
                {% for entidad in entidades %}
                <tr>
                    <td>{{ entidad.usuarioRed }}</td>
                    <td>{{ entidad.nombre }}</td>
                    <td>{{ entidad.apellido }}</td>
                    <td>{{ entidad.mail }}</td>
                    <td class="text-center">
                        <a type="button" class="btn btn-default" aria-label="Left Align" href="
                        {{ path('edit_responsable', {'id':entidad.id}) }}">
                        <span class="fa fa-pencil" aria-hidden="true" ></span>
                    </a>
                    <a class="btn btn-default" aria-label="Left Align" href="#" data-href="
                    {{ path('delete_responsable', {'id':entidad.id}) }}" data-texto="¿Eliminar el Responsable <span class='text-danger'>{{ entidad.nombre|striptags }}</span>?" data-toggle="modal" data-target="#popup_confirmar">
                    <span class="fa fa-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
<br>

</div>
</div>

{% endblock %}